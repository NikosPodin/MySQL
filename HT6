# Задание 12 "Создать и заполнить таблицы лайков и постов".
INSERT INTO posts 
  SELECT 
    id, 
    FLOOR(1 + (RAND() * 100)), 
    FLOOR(1 + (RAND() * 100)),
    'any text',
    'some text',
    FLOOR(1 + (RAND() * 4)),
    TRUE, 
    FALSE, 
    CURRENT_TIMESTAMP, 
    CURRENT_TIMESTAMP 
  FROM media;
  
  INSERT INTO likes 
  SELECT 
    id, 
    FLOOR(1 + (RAND() * 100)), 
    FLOOR(1 + (RAND() * 100)),
    FLOOR(1 + (RAND() * 4)),
    CURRENT_TIMESTAMP 
  FROM messages;
  
  
